<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<div class="container Accueil">
    <header class="Accueil-Header">
        <h1>NODE PROJECT</h1>
    </header>

    <p>WELCOME TO THE NODE PROJECT</p>

    <p>
        <Link to="/inscription">
        <div class="btn">
            Sign up
        </div>
        <input type="button" id="but_signout" name="Sign In">
        </Link>
    </p>

    <p>
        <Link to="/connexion">
        <div class="btn">
            Sign in
        </div>
        <input type="button" id="but_signin" name="Sign In">
        </Link>
    </p>

</div>
    <script>
        

        $("#show-metrics").click(e => {
            e.preventDefault();
            $.getJSON("/metrics.json", {}, data => {
                const content = data.map(d => {
                    return "timestamp: " + d.timestamp + ", value: " + d.value + "";
                });
                $("#metrics").append(content.join("\n"));
            });
        });
        $('#but_signin').click(e => {
            e.preventDefault();
            const myURL = new URL('http://localhost:8080/signin');
            window.location.replace("/signin");
            console.log(myURL);
        });
        $('#but_signout').click(e => {
            e.preventDefault();
            const myURL = new URL('http://localhost:8080/signin');
            window.location.replace("/signout");
            console.log(myURL);
        })
    </script>
</body>

</html>